<!-- ./views/index.handlebars -->
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="d-flex-column mb-3">
          <div class="card mb-1">
            <img class="card-img-top" src="{{this.image}}"
              alt="Sababa 沙巴巴中東美食">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="d-inline-flex justify-content-end mt-2 " style="width:100%">
                <div class="category p-2 bg-success text-white border border-dark rounded" style="font-size:10px;">{{this.category}}
                </div>
                <div class="rating p-2 bg-warning text-dark border border-dark rounded" style="font-size:10px; margin-left:5px">
                  {{this.rating}}
                </div>
              </div>
            </div>
          </div>
          <div class="button-zone d-flex justify-content-end align-items-center" style="height:20px">
            <a href="/restaurants/{{this._id}}/edit" style="text-decoration:none;font-size:7px; padding: 0 1px;" class="border border-dark rounded" >edit</a>
            <a href="/restaurants/{{this._id}}" style="text-decoration:none;font-size:7px; margin-left:2px; padding: 0 1px;" class=" border border-dark rounded">detail</a>
            <form action="/restaurants/{{this._id}}/delete" method="POST" style="margin-left:2px;">
              <button type="submit" class=" border border-dark rounded" style="text-decoration:none;font-size:7px;">delete</button>
            </form>
          </div>
        </div>
        
        {{/each}}
      </div>
    </div>
  </div>
</div>



